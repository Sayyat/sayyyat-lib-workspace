{
  "compilerOptions": {
    "jsx": "react-jsx",

    "declaration": true,
    "declarationDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}